# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.home

# About page
GET         /about                    controllers.Application.about

# Books page
# GET         /books                    controllers.Application.books

# Movies page
GET         /movies                   controllers.Application.movies

# Go to the quotes page
GET         /quotes                   controllers.Application.quotes

# Get stats as JSON for the user id
GET         /json/stats/:id           controllers.Sessions.getStats(id: Int)

# Get sessions as JSON for the user id
GET         /json/sessions/:id        controllers.Sessions.getUserSessionData(id: Int)

# Get quotes as JSON for the user id
GET         /json/quotes/:id          controllers.Application.getQuotes(id: Int)

# Get movies as JSON for the user id
GET         /json/movies/:id          controllers.Movies.getMovies(id: Int)

# Get books as JSON for the user id
# GET         /json/books/:id         controllers.Books.getBooks(id: Int)

# Start a study session
POST        /study/start              controllers.Sessions.startSession()

# Stop a study session
POST        /study/stop               controllers.Sessions.stopSession()

# Abort a study session
POST        /study/abort              controllers.Sessions.abortSession()

# Add a study subject
POST        /study/add                controllers.Sessions.addSubject()

# Remove a study subject
POST        /study/remove             controllers.Sessions.removeSubject()

# Rename a study subject
POST        /study/rename             controllers.Sessions.renameSubject()

# Merge one subject into another
POST        /study/merge              controllers.Sessions.mergeSubjects()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)

    